{
  "name": "gds-premier-projet",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:GDS-premier-projet": "node dist/GDS-premier-projet/server/server.mjs",
    "openapi": "npm run openapi:mkdir && npm run openapi:copy && npm run openapi:gen",
    "openapi:mkdir": "if not exist tools\\swagger\\src mkdir tools\\swagger\\src",
    "openapi:copy": "copy \"C:\\Users\\pcc\\IdeaProjects\\gestiondestock\\target\\swagger.json\" tools\\swagger\\src",
    "openapi:gen": "npx openapi-generator-cli generate -i \"tools/swagger/src/swagger.json\" -g typescript-angular -o src/openapi --additional-properties=\"withInterfaces=true,fileNaming=camelCase\" --skip-validate-spec"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/platform-server": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@angular/ssr": "^20.1.6",
    "@fortawesome/fontawesome-free": "^7.0.0",
    "bootstrap": "^5.3.7",
    "chart.js": "^4.5.0",
    "express": "^5.1.0",
    "ng2-charts": "^8.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular/build": "^20.1.6",
    "@angular/cli": "^20.1.6",
    "@angular/compiler-cli": "^20.1.0",
    "@openapitools/openapi-generator-cli": "^2.23.1",
    "@types/chart.js": "^2.9.41",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.17.19",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-openapi-gen": "^0.53.0",
    "ng-packagr": "^20.1.6",
    "typescript": "~5.8.2"
  }
}
